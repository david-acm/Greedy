@* <button class="btn btn-primary" @onmousemove="Animate">Click me</button> *@

@code {
  private int z = 0;
  private int y = 0;
  private int x = 0;
  private string _id;

  [Parameter]
  public int Number { get; set; }

  protected override async Task OnInitializedAsync() {
    _id = new string(Guid.NewGuid().ToString().Where(c => !char.IsDigit(c)).ToArray());
    UpdateValue();
    await InvokeAsync(StateHasChanged);
  }

  protected override void OnParametersSet() => UpdateValue();

  private void UpdateValue() {
    var rnd = new Random();
    var spins = 0;//rnd.Next(0, 5);
    switch (Number)
    {
      case 1:
        Rotate(105 + (spins * 360), 0, 15+ (spins * 360));
        break;
      case 3:
        Rotate(15+ (spins * 360), 255+ (spins * 360), 0);
        break;
      case 2:
        Rotate(15+ (spins * 360), 165+ (spins * 360), 0);
        break;
      case 4:
        Rotate(15+ (spins * 360), -15+ (spins * 360), 0);
        break;
      case 5:
        Rotate(15, 75, 0);
        break;
      case 6:
        Rotate(-75, 0, -15);
        break;
    }
  }

  private void Rotate(int x, int y, int z) {
    this.x = x;
    this.z = z;
    this.y = y;
  }

  private void Loop() => new Timer(_ => { InvokeAsync(async () => { StateHasChanged(); }); }, null, 0, 200);

  private void MouseRotate(MouseEventArgs e) {
    z = (int)e.ClientY * 2;
    y = (int)e.ClientX * 2;
    Logger.LogInformation($"{z}, {y}");
  }

}

<style>
    #@($"{_id}.panel .dice") {
      transform-style: preserve-3d;
      transform:
        rotateX(@($"{x}deg"))
        rotateY(@($"{y}deg"))
        rotateZ(@($"{z}deg"));
    }
</style>